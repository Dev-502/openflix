.container
  .row
    .col-xs-6.col-sm-4.col-md-3.col-lg-2(ng-if="movie.poster_path", ng-repeat="movie in collection")
      a(href="/movies/{{ movie.title | slugify }}/{{movie.id}}").thumbnail
        img(ng-src="http://image.tmdb.org/t/p/w154{{movie.poster_path}}", title="{{movie.title}}").img-responsive
